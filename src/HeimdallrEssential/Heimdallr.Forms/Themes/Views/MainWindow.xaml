<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:heimd="clr-namespace:Heimdallr.WPF.Global.WPF.Controls;assembly=Heimdallr.WPF"
    xmlns:views="clr-namespace:Heimdallr.Forms.UI.Views">

  <Style TargetType="{x:Type views:MainWindow}" BasedOn="{StaticResource {x:Type heimd:DarkThemeWindow} }">
    
    <!-- 여기서는 DarkThemeWindow 스타일을 기반으로 콘텐츠를 정의 -->
    <Setter Property="Content">
      <Setter.Value>
        <StackPanel>
          <Slider />
          <ComboBox/>
          <CheckBox/>
          <TextBox />
        </StackPanel>
      </Setter.Value>
    </Setter>
    
  </Style>
</ResourceDictionary>
